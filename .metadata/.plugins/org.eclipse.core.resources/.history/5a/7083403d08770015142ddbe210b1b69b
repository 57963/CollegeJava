package com.ac.cs.exercises.gui;

import java.awt.Canvas;
import java.awt.Graphics;
import java.util.ArrayList;

import javax.swing.JFrame;
import javax.swing.JLabel;

public class GUI extends JFrame {
	private static final long serialVersionUID = 1L;
	static JFrame frame = new JFrame();
	ArrayList <JLabel> signs = new ArrayList <JLabel> ();
	private boolean run = true;
	private Graphics g;
	private Canvas c;
	public GUI(){
		for(int i = 0;i<10;i++){
			signs.add(new JLabel("*"));
		}
		for(JLabel l: signs){
			l.setVisible(true);
			frame.add(l);
		}
		frame.setSize(600,400);
		frame.setTitle("Hi");
		c.update(g);
		frame.add(c);
		frame.setDefaultCloseOperation(EXIT_ON_CLOSE);
		frame.setVisible(true);
		for(int i = 0;run;i++){
			draw(i);
		}
	}
	
	public void draw(int i){
		for(int u = 0;u<signs.size();u++){
			signs.get(u).setLocation((int)(Math.sin(i/100000.0+u*10.0)*100)+300, (int)(Math.cos(i/100000.0+u*10.0)*100));
			frame.add(signs.get(u));
		}
		g.drawLine(0, 0, 100, 100);
	}
	
	public static void main(String[] args){
		new GUI();
	}
}
