package com.ac.cs.exercises.gui;

import java.util.ArrayList;
import javax.swing.JFrame;
import javax.swing.JLabel;

public class GUI extends JFrame {
	private static final long serialVersionUID = 1L;
	static JFrame frame = new JFrame();
	ArrayList <JLabel> signs = new ArrayList <JLabel> ();
	private boolean run = true;

	public GUI(){
		for(int i = 0;i<10;i++){
			signs.add(new JLabel("*"));
		}
		for(JLabel l: signs){
			l.setVisible(true);
			frame.add(l);
		}
		frame.setSize(600,400);
		frame.setTitle("Hi");
		frame.setDefaultCloseOperation(EXIT_ON_CLOSE);
		frame.setVisible(true);
		for(int i = 0;run;i++){
			draw(i);
		}
	}
	
	public void draw(int i){
		for(int u = 0;i<signs.size()-1;u++){
			signs.get(u).setLocation((int)(Math.sin(i/1000000.0+u*10)*100)+300, (int)(Math.cos(i/1000000.0+u*10)*100));
		}
	}
	
	public static void main(String[] args){
		new GUI();
	}
}
